include common

mixin profile(profile)
  #profile.p-4
    form#profile-form
      .form-row
        .form-group.col-md-12.text-center
            img(src="{{photoURL}}{{^photoURL}}/assets/santa-hat.svg{{/photoURL}}").img-thumbnail.rounded.mx-auto.img-fluid
      .form-row
        .form-group.col-md-12
            +formInput('displayName', 'First Last', '{{displayName}}')
      .form-row.align-items-center
        .form-group.col-md-6
          +formInput('email', 'Email', '{{email}}', 'email')(readonly)
            span.badge
        .form-group.col-6.col-md-3
          +formInput('number', 'Phone Number', '', 'tel')
        .form-group.col-6.col-md-3
          .form-check.form-check-inline
            input#notifications.form-check-input(type='checkbox' value='notifications' disabled)
            label.form-check-label(for='notifications') Text Notifications

      div.border-top.my-2.row.border-dark
      //- hr(style="border-top: 1px solid black;")
      h3.text-center Address
      .form-group
        +formInput('address', '1234 Main St', '')
      .form-group
        +formInput('address2', 'APT# 1234', '')
      .form-row
        .form-group.col-md-6
          +formInput('city', 'City', '')
        .form-group.col-md-4
          +formInput('state', 'State', '')
        .form-group.col-md-2
          +formInput('zip', 'Zip Code', '')(pattern="[0-9]*")

template#profile-content
  .col
    button.position-absolute.close.profile-close(type='button' aria-label='Close')
      span(aria-hidden='true') Ã—
    +profile()

