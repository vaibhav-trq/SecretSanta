  body
    include nav
    .container.my-auto
      .h-100
        #content.mx-auto.filter.row
      #recaptcha-container
    include pages/login
    include pages/home
    include pages/profile
    include pages/match
    include pages/match-profile
    include pages/event-details
    
    //
      initialize the SDK after all desired features are loaded, set useEmulator to false
      to avoid connecting the SDK to running emulators.
    script(defer='' src='/__/firebase/init.js?useEmulator=true')
