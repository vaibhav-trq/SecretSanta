mixin menu_button(id, value)
  - var id = id + '-button'
  button.btn.btn-primary.m-2.d-none(id=id type='button')= value

mixin chat_button(id, value)
  button.btn.btn-primary.m-2(id=id type='button')= value

mixin formInput(elementId, placeholder, value, inputType='text')
  - var id='input' + elementId
  - var helpId=elementId + 'Help'
  .input-badge.pb-1
    block
    input.form-control(id=id type=inputType placeholder=placeholder name=elementId value=value)&attributes(attributes)

mixin add_message(type)
  - var text_class = "text-" + type
  h5(class=text_class)
    small.font-weight-bold {{message}}

template#add-message-danger
  +add_message("danger")

template#add-message-success
  +add_message("success")
