include ../common

mixin matchProfile()
  #match-profile.p-4
    #match-profile-form
      .form-row.text-center
        .form-group.col-6.col-sm-4.col-md-3.mx-auto
            img(src="{{user.photoURL}}{{^user.photoURL}}/assets/santa-hat.svg{{/user.photoURL}}").img-thumbnail.rounded.mx-auto.img-fluid
      .form-row
        .form-group.col-md-12
            +formInput('displayName', 'Match First Last', '{{match.displayName}}')(readonly)
      .form-row.align-items-center
        .form-group.col-md-6
          +formInput('email', 'Email', '{{match.email}}', 'email')(readonly)
            span.badge
        .form-group.col-6.col-md-3
          +formInput('number', 'Phone Number', '', 'tel')(readonly)
    div.border-top.my-2.row.border-dark
    h3.text-center Address
    #match-address-form
      .form-group
        +formInput('street', '1234 Main St', '{{address.street}}')(readonly)
      .form-group
        +formInput('street2', 'APT# 1234', '{{address.street2}}')(readonly)
      .form-row
        .form-group.col-md-6
          +formInput('city', 'City', '{{address.city}}')(readonly)
        .form-group.col-md-4
          +formInput('state', 'State', '{{address.state}}')(readonly)
        .form-group.col-md-2
          +formInput('zip', 'Zip Code', '{{address.street}}')(pattern="[0-9]*", readonly)

template#match-profile-content
  .col
    button.position-absolute.close.profile-close(type='button' aria-label='Close')
      span(aria-hidden='true') Ã—
    +matchProfile()
